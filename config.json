{
  "paths": {
    "ffmpeg": "C:/ffmpeg/bin/ffmpeg.exe",
    "probe": "C:/ffmpeg/bin/ffprobe.exe",
    "mkvmerge": "C:/Program Files/MKVToolNix/mkvmerge.exe"
  },

  "audio": {
    "target_codec": "aac",
    "target_container": "m4a",
    "target_bitrate": "320k",
    "target_samplerate": 48000,
    "lufs_target": -14,
    "true_peak": -1.0,
    "lra": 11
  },

  "apps": {
    "video_music": {
      "max_items_per_dir": 15
    }
  },

  "dry_run": false,
  "max_workers": 4,

  "output": {
    "directory": "videos"
  }
}
